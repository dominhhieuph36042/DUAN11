<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DoanhThuFragment"
    android:layout_margin="10dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Doanh Thu"
            android:textSize="30sp"

            android:textColor="@color/black"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnTuNgay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Từ ngày:"
                android:background="@drawable/dateitem"/>

            <EditText
                android:id="@+id/edTuNgay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="YYYY//MM//DD"
                android:layout_weight="2"
                android:textSize="20dp"
                android:focusable="false"
                android:clickable="false"
                android:inputType="none"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/btnDenNgay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Đến ngày:"
                android:background="@drawable/dateitem"

                />

            <EditText
                android:id="@+id/edDenNgay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="YYYY//MM//DD"
                android:layout_weight="2"
                android:textSize="20dp"
                android:focusable="false"
                android:clickable="false"
                android:inputType="none"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btnDoanhThu"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom"
            android:drawableStart="@drawable/ic_money"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Doanh Thu"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:id="@+id/tvDoanhThu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Doanh thu:"
            android:layout_marginTop="20dp"
            android:layout_margin="20dp"
            />

    </LinearLayout>
</FrameLayout>